
# EditorConfig is awesome: http://EditorConfig.org


# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
indent_style = space
# Set default charset
charset = utf-8

[*.{el}]
insert_final_newline = false

[*.{el,md,yml,yaml,js,json}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{py}]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{make,mk}]
indent_style             = tab
indent_size              = 4
